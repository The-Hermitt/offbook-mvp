{
  "name": "offbook-mvp",
  "version": "0.2.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "cross-env PORT=3010 SHARED_SECRET=1976 tsx ./src/server.ts",
    "dev": "cross-env NODE_ENV=development tsx watch ./src/server.ts",
    "health": "node -e \"fetch('http://localhost:'+(process.env.PORT||3010)+'/health').then(r=>r.text()).then(console.log).catch(e=>{console.error(e);process.exit(1)})\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.2",
    "pdf-parse": "^1.1.1",
    "undici": "^6.19.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "description": "Upload a script PDF, select a role, assign AI voices to partners, and render a “reader” track (AI reads partner lines; you perform yours). Works via REST debug routes and an HTTP MCP endpoint for the ChatGPT Apps SDK.",
