{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src"
  ],
  "exclude": ["src/tools/**"]
}
